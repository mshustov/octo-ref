{
  "name": "octo-ref",
  "version": "0.0.3",
  "dependencies": {
    "github-injection": "^0.1.0",
    "object-assign": "^4.0.1",
    "react": "^0.14.7",
    "react-color": "^2.0.0",
    "react-dom": "^0.14.7",
